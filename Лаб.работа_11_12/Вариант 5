def palindrome(s):  # объявление функции palindrome, принимающей строку s
    s = ''.join(ch.lower() for ch in s if not ch.isspace())  # делаем все буквы маленькими, убираем пробелы и соединяем в одну строчку
    def helper(l, r):  # функция для проверки является ли строка палиндромом
        if l >= r:  # базовый случай: если левые и правые индексы пересеклись или равны
            return True   # это означает, что все пары проверены - строка палиндром
        if s[l] != s[r]:    # если символы на позициях l и r не совпадают
            return False   # строка не палиндром
        return helper(l+1, r-1)  # если совпадают - рекурсивно проверяем внутреннюю подстроку (следующие элементы внутри)
    return helper(0, len(s)-1)  # запускаем helper от начала до конца строки
print(palindrome("level")) #  проверяем
print(palindrome("Нажал кабан на баклажан"))  # (пробелы и регистр игнорируются)
