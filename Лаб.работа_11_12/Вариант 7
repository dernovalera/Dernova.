def max_recursive(arr, i = 0):  # объявление функции для поиска максимума в массиве (arr), начиная с индекса i
    if i == len(arr) - 1:  # если достигли конца массива (базовый случай)
        return arr[i]   # возвращаем этот элемент как максимум на этом отрезке
    max_elem = max_recursive(arr, i+1)  # рекурсивно находим максимум в подмассиве, по очереди проверяем элементы
    if arr[i] > max_elem:  # сравниваем текущий элемент и максимум, возвращаем больший
       return arr[i]
    else:
       return max_elem
print(max_recursive([3, 1, 7, 4, 6]))  # пример
