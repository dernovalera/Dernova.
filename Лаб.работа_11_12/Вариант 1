def sum_numbers(n):  # объявление функции sum_numbers, принимающей параметр n
    n = abs(n)  # приводим n к абсолютному значению (берем модуль)
    if n == 0:  # проверяем базовый случай: если число равно 0
        return 0  # возвращаем 0 — сумма цифр числа 0 равна 0
    return n % 10 + sum_numbers(n // 10)  # иначе возвращаем последнюю цифру (n % 10) и рекурсивную сумму цифр целой части n//10
print(sum_numbers(349))  # пример вызова
