//Сортировка вставками (Insertion Sort), исходный код был написан на Java, ниже представлена его реализация на C++
#include <Windows.h>  // подключаем библиотеку для русского языка
#include <iostream>  // для ввода и вывода данных
#include <vector>  // Подключаем библиотеку для использования динамического массива
using namespace std;  // чтобы не писать std:: перед cin (вводит пользователь) и cout (выводит компьютер)

void insertionSort(vector<int>& arr) {  // объявляем функцию, которая сортирует массив методом вставки (когда мы последовательно вставляем каждый новый элемент в уже отсортированную часть массива, вставляя его на правильное место)
    int n = arr.size();  // переменная, которая хранит количество элементов в массиве

    for (int i = 1; i < n; i++) {  // начинаем цикл, который повторяется для каждого элемента массива (начинаем со второго, так как первый элемент изначально не с чем сравнивать)
        int key = arr[i];  // сохраняем в переменную текущий элемент для вставки
        int j = i - 1;  // создаем переменную, в которую сохраним индекс предыдущего элемента (чтобы с ним сравнить)

        // начинаем цикл, который проверяет, нужно ли сдвигать элементы вправо
        while (j >= 0 && arr[j] > key) {  // пока j не вышел за границы массива и если текущий элемент arr[j] больше, чем key, то есть тот элемент, который мы вставляем - нужно сместить вправо (оставить место для key)
            arr[j + 1] = arr[j];  // двигаем элемент вправо
            j--;  // уменьшаем индекс на 1 (чтобы проверить предыдущий элемент)
        }  // здесь мы повторяем процесс проверки и сдвига элементов, пока не найдём правильное место для
        arr[j + 1] = key; // вставляем key на правильное место
    }
}

void printArray(const vector<int>& arr) {  // объявляем функцию, которая выводит массив на экран
    for (int num : arr) {  // перебирает все элементы массива
        cout << num << " ";  // выводит элементы и пробел (num)
    }
    cout << endl;  // после вывода перекидывает на новую строчку
}

int main() {  // старт программы
    SetConsoleCP(65001);  // чтобы вводить на русском языке
    SetConsoleOutputCP(65001);  // чтобы выводить на русском языке
    vector<int> array = {12, 11, 13, 5, 6};  // создаем массив

    cout << "Исходный массив: ";  // выводится строчка и исходный массив
    printArray(array);

    insertionSort(array);  // вызывается функция

    cout << "Отсортированный массив: ";  // выводится строчка и отсортированный массив
    printArray(array);

    return 0;
}
